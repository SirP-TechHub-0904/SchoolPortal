@using SchoolPortal.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";

    Layout = "~/Views/Shared/_login2022.cshtml";

}

@if (TempData["error"] != null)
{

    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
        @TempData["error"]
    </div>

}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "" }))
{
    @*@Html.AntiForgeryToken()*@

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group form-box">
        <input name="Username" type="text" class="form-control" placeholder="Username" aria-label="Username">
        <i class="fa fa-user"></i>
    </div>
    <div class="form-group form-box clearfix">
        <input name="Password" type="password" class="form-control" autocomplete="off" placeholder="Password" aria-label="Password">
        <i class="fa fa-lock"></i>
    </div>
    <div class="checkbox form-group clearfix">
        <div class="form-check float-start" style="font-weight:900;">


            If you dont know your username or password.
            <a href="@Url.Action("FindProfile", "Account")" class="link-light float-end forgot-password">Click Here</a>
        </div>



    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg btn-theme">Login</button>
    </div>
}